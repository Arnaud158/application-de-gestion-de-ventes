<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sae.controller.NewConducteurController">
   <children>
      <TextField fx:id="nomConducteur" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="nom du conducteur" />
      <TextField fx:id="prenomConducteur" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="prénom du conducteur" />
      <TextField fx:id="numeroPermis" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="numéro de permis" />
      <ComboBox fx:id="typePermis" prefWidth="150.0" promptText="Type de Permis" />
      <ComboBox fx:id="typeConducteur" prefWidth="150.0" promptText="Type conducteur" />
      <TextField fx:id="nbVisites" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="nbVisites (commerciaux)" />
      <TextField fx:id="nbHeuresConduite" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="nbHeuresConduite (livreur)" />
      <HBox alignment="CENTER" prefHeight="23.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#validerAjout" text="Valider" />
            <Button mnemonicParsing="false" onAction="#annulerAjout" text="Annuler" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
